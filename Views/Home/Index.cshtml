@model ThreeAmigosWebApp.Models.HomeViewModel

<div class="hero-section">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/01.jpg" class="d-block w-100" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Discover Amazing Products</h3>
                    <p>Find the latest and greatest items in our store.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/02.jpg" class="d-block w-100" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Exclusive Deals</h3>
                    <p>Shop and save big with our special discounts.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/03.jpg" class="d-block w-100" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Best Quality Guaranteed</h3>
                    <p>Your satisfaction is our priority.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container mt-5">
    <div class="section-title">
        <h2>Featured Products</h2>
        <p>Explore our handpicked selections just for you.</p>
    </div>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card shadow-sm">
                    <img class="card-img-top" src="~/img/@product.ImageFileName" alt="@product.Name" class="product-image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="price">$@product.Price</p>
                        <a href="/Shop/Details/@product.Id" class="btn btn-primary btn-block">View Product</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="section-title">
        <h2>Best Sellers</h2>
        <p>Check out what’s popular among our customers.</p>
    </div>
    <div class="row">
        @foreach (var product in Model.BestSellers)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card shadow-sm">
                    <img class="card-img-top" src="~/img/@product.ImageFileName" alt="@product.Name" class="product-image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="price">$@product.Price</p>
                        <a href="/Shop/Details/@product.Id" class="btn btn-primary btn-block">View Product</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="section-title">
        <h2>New Arrivals</h2>
        <p>Discover the latest additions to our collection.</p>
    </div>
    <div class="row">
        @foreach (var product in Model.NewArrivals)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card shadow-sm">
                    <img class="card-img-top" src="~/img/@product.ImageFileName" alt="@product.Name" class="product-image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="price">$@product.Price</p>
                        <a href="/Shop/Details/@product.Id" class="btn btn-primary btn-block">View Product</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
