@model ThreeAmigosWebApp.Models.User

<div class="container mt-5">
    <h2>Profile</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="UserName">Name (Username)</label>
            <input type="text" name="UserName" class="form-control" value="@Model.UserName" required />
        </div>
        
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="Email" class="form-control" value="@Model.Email" required />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" name="Address" class="form-control" value="@Model.Address" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
        </div>
        <div class="form-group">
            <label>Funds</label>
            <input type="text" class="form-control" value="$@Model.Funds" readonly />
        </div>
        
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>

    @if (User.IsInRole("User"))
    {
        <div class="mt-5">
            <h3>Order History</h3>
            <a href="/Orders" class="btn btn-info">View Order History</a>
        </div>
    }
</div>
