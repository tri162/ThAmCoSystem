<h1>Welcome to ThreeAmigos!</h1>
<h2>Featured Products</h2>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <a href="/Shop/Details/@product.Id" class="btn btn-primary">View Product</a>
                </div>
            </div>
        </div>
    }
</div>
