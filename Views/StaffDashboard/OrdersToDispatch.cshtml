@model List<Order>

<h2>Orders to Dispatch</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User.UserName</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <form method="post" action="@Url.Action("DispatchOrder", "StaffDashboard")">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <button type="submit" class="btn btn-primary">Dispatch</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
