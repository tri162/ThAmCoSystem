@model CustomerProfileViewModel

<h2>@Model.User.UserName's Profile</h2>

<h4>Order History</h4>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="@Url.Action("DeleteCustomerAccount", "StaffDashboard")">
    <input type="hidden" name="userId" value="@Model.User.Id" />
    <button type="submit" class="btn btn-danger">Delete Customer Account</button>
</form>
